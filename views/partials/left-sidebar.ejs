<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      href="https://fonts.googleapis.com/css?family=Roboto+Condensed:300,400,700&display=swap"
      rel="stylesheet"
    />
    <!-- Google Fonts -->

    <link rel="stylesheet" href="/css/style.css" />
    <!-- Custom Stylesheet -->
    
    <title>AffairTech_home</title>
  </head>
  <body>
    <div class="container">
      <div class="more-categories">
        <input type="checkbox" class="more-categories__checkbox" id="catagories-toggle" />
        <label for="catagories-toggle" class="more-categories__button">
          <span class="more-categories__icon">&larr;</span>
        </label>

        <nav class="more-categories__nav">
          <ul class="more-categories__list">
            <% if(categories.length){ %>
            <% categories.forEach(category => { %>
                <li class="more-categories__item">
                <a href="/categoryWisePosts/<%= category.title %>" class="more-categories__link">
                  <%= category.title %>
                </a>
                </li>
            <% }); %>
            <% } %>
          </ul>
        </nav>
      </div>

      <!-- Navigation Menu Start -->
      <div class="navigation">
        <input type="checkbox" class="navigation__checkbox" id="navi-toggle" />
        <label for="navi-toggle" class="navigation__button">
          <span class="navigation__icon">&nbsp;</span>
        </label>

        <div class="navigation__background">&nbsp;</div>

        <nav class="navigation__nav">
          <ul class="navigation__list">
            <li class="navigation__item">
              <a href="/login" class="navigation__link">Login</a>
            </li>
            <% if(categories.length){ %>
            <% categories.forEach(category => { %>
                <li class="navigation__item">
                <a href="/categoryWisePosts/<%= category.title %>" class="navigation__link">
                  <%= category.title %>
                </a>
                </li>
            <% }); %>
            <% } %>
          </ul>
        </nav>
      </div>
      <!-- Navigation Menu End -->


      <section class="left-sidebar">
        <div class="logo-box">
          <a href="/"><img class="logo-img" src="/img/logo/AffairTechLogo.png" /></a>
        </div>
        <a href="<%= currentUser? '/Logout' : '/Login' %>" class="btn btn__login">
        <%= currentUser? "Logout" : "Login" %>  
        </a>
        

        <div class="catagories">
          <ul class="catagories__list">
            <% if(categories.length){ %>
            <% let i = 0; categories.forEach(category => { if(i<4){ %>
                <li class="catagories__item"><a href="/categoryWisePosts/<%= category.title %>">
                  <%= category.title %></a>
                </li>
            <%} i++ }); %>
            <% } %>
            <li class="catagories__item"><label for="catagories-toggle">More</label></li>
          </ul>
          
        </div>
        <!-- catagories -->

        <div class="about">
          <hr />
          <ul class="about__list">
            <% if(currentUser && currentUser.isUser){ %>
            <li class="about__item"><a href="/admin/dashboard">Dashboard</a></li>
            <% } %>
            <li class="about__item"><a href="/about">About</a></li></li>
            <li class="about__item"><a href="/members">Members</a></li>
          </ul>
        </div>
        <!-- about -->

        <div class="copyright">&copy; AffairTech</div>
        <!-- copyright -->
      </section>
      <!-- left-sidebar end -->
