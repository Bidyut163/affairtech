<% include ../partials/dashboardHeader %>
<!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h1><i class="fas fa-user"></i> Edit Profile</h1>
          </div>
        </div>
      </div>
    </header>

    <!-- ACTION SECTION -->
    <section id="action" class="py-4 mb-4 bg-light">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <a href="index.html" class="btn btn-light btn-block">
              <i class="fas fa-arrow-left"></i> Back To Dashboard
            </a>
          </div>
          <div class="col-md-3">
            <a href="index.html" class="btn btn-success btn-block">
              <i class="fas fa-lock"></i> Change Password
            </a>
          </div>
          <div class="col-md-3">
            <a href="index.html" class="btn btn-danger btn-block">
              <i class="fas fa-trash"></i> Delete Account
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- PROFILE SECTION -->
    <section id="profile">
      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card">
              <div class="card-header"><h4>Edit Profile</h4></div>
              <form action="/admin/profile/<%= user._id%>?_method=PUT" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input
                      id="username"
                      name="username"
                      type="text"
                      class="form-control"
                      value="<%= user.username%>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="email">Email</label>
                    <input
                      id="email"
                      name="email"
                      type="email"
                      class="form-control"
                      value="<%= user.email %>"
                    />
                  </div>
                  <div class="form-group">
                    <label for="access">Access</label>
                    <select name="access" class="form-control">
                      <option value="User">User</option>
                      <option value="Admin">Admin</option>
                    </select>
                  </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm" >
                  Submit
                </button>
              </div>
              <!-- modal-footer -->
              </form>
            </div>
          </div>
          <!-- col-md-9 -->
          <div class="col-md-3">
            <h1>Your Avatar</h1>
            <img src="/stylesheets/img/avatar.png" class="d-block img-fluid mb-3" alt="" />
            <button class="btn btn-primary btn-block">Edit Image</button>
            <button class="btn btn-danger btn-block">Delete Image</button>
          </div>
          <!-- col-md-3 -->
        </div>
      </div>
    </section>
<% include ../partials/dashboardFooter %>