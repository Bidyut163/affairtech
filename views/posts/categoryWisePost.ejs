<% include ../partials/left-sidebar%>

        
        <div class="content">
          <% title ? %>
          <h1 class="heading-primary mb-sm mt-sm"><%= title %></h1>
          <% : %> <span>&nbsp;</span>
          <hr class="mb-sm" />
          <section class="articles_section">
            <% posts.forEach(post => { %>
              
            <div class="article">
              <div class="article__heading">
                <h1 class="heading-secondary mb-sm">
                  <a href="/posts/<%= post.id %>"><%= post.title %></a>
                </h1>
                <p class="small"><%= post.category %></p>
                <p class="date"><%= post.created.toDateString() %></p>
              </div>
              <div class="article__content">
                <p class="para">
                  <a href="/posts/<%= post.id %>"><%- post.body.substring(0, 500) %>...</a>
                </p>
              </div>
              <div class="article__img-box">
                <a href="/posts/<%= post.id %>"><img src="<%= post.image %>" alt="article-img" class="article__img" /></a>
              </div>
            </div>
            <!-- article -->
            <hr class="mb-sm" />
            
            <% }) %>

             <!-- PAGINATION -->
            <div class="pagination">
              <ul class="pagination__list">
                <% if (current == 1) { %>
                  <li class="pagination__item disabled"><a class="pagination__link">&laquo; Prev</a></li>
                <% } else { %>  
                  <li class="pagination__item"><a href="/" class="pagination__link">&laquo; Prev</a></li>
                <% } %>

                <% if (current == pages) { %>
                  <li class="pagination__item disabled"><a class="pagination__link disabled">Next &raquo;</a></li>
                <% } else { %>
                <% if(title){ %>
                  <li class="pagination__item"><a href="/categoryWisePosts/<%= title %>?page=<%= Number(current) + 1 %>" class="pagination__link">Next &raquo;</a></li>
                  <% } else{%>
                      <li class="pagination__item"><a href="/?page=<%= Number(current) + 1 %>" class="pagination__link">Next &raquo;</a></li>
                  <% } %>
                <% } %>
              </ul>
            </div>
          </section>
        </div>



<% include ../partials/right-sidebar %>